@model Projekat.Context.KupovinaOruzja
@{
    ViewBag.Title = "KupiOruzje";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<div style="padding:20px;"></div>
<h2>Kupovina oruzja</h2>
<div style="padding:20px;"></div>
<style>
    .error {
        color: red;
    }
</style>
@using (Html.BeginForm("UbaciKupiOruzje", "Kupi", FormMethod.Post))
{
<div class="container">

    <div class="form-group">

        <label>Ime</label>
        @Html.ValidationMessageFor(x => x.Ime, "")
        @Html.TextBoxFor(x => x.Ime, new { @class = "form-control" ,Value=ViewBag.Ime})
    </div>
    <div class="form-group">
        <label>Prezime</label>
        @Html.ValidationMessageFor(x => x.Prezime, "")
        @Html.TextBoxFor(x => x.Prezime, new { @class = "form-control" ,Value=ViewBag.Prezime})
    </div>
    <div class="form-group">
        <label>Adresa</label>
        @Html.ValidationMessageFor(x => x.Adresa, "")
        @Html.TextBoxFor(x => x.Adresa, new { @class = "form-control", Value = ViewBag.Adresa })
    </div>
    <div class="form-group">
        <label>Broj telefona</label>
        @Html.ValidationMessageFor(x => x.BrojTelefona, "")
        @Html.TextBoxFor(x => x.BrojTelefona, new { @class = "form-control", Value = ViewBag.BrojTelefona })
    </div>
    <div class="form-group">
        <label>Broj kartice</label>
        @Html.ValidationMessageFor(x => x.BrojKartice, "")
        @Html.TextBoxFor(x => x.BrojKartice, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>PIN kartice</label>
        @Html.ValidationMessageFor(x => x.PINKartice, "")
        @Html.TextBoxFor(x => x.PINKartice, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>JMBG</label>
        @Html.ValidationMessageFor(x => x.JMBG, "")
        @Html.TextBoxFor(x => x.JMBG, new { @class = "form-control", Value = ViewBag.JMBG })
    </div>
    <div class="form-group">
        <label>ID Oruzja</label>
        @Html.ValidationMessageFor(x => x.IDOruzja, "")
        @Html.TextBoxFor(x => x.IDOruzja, new { @class = "form-control" })
    </div>
    <div class="form-group">

        <button type="submit" style="color: white" class="btn btn-success">Unesi</button>
    </div>
</div>
}
