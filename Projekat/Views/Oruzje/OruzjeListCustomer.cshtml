@model List<Projekat.Context.Oruzjee>
@{
    ViewBag.Title = "OruzjeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table {
        margin: 20px;
    }

    th {
        
        font-family: sans-serif;
        margin: 2px;
        background-color: lightgreen;
        width: 200px;
        height: 30px;
        border:  none;
        text-align: center;
    }

    td {
        
        font-family: sans-serif;
        margin: 2px;
        background-color: lightgray;
        width: 200px;
        height: 30px;
        text-align: center;
        border: none;
    }
</style>
<table>
    <tr>
        <th>ID Oruzja</th>
        <th>naziv</th>
        <th>tip</th>
        <th>godina proizvodnje</th>
        <th>cena</th>
       
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.IDOruzja</td>
            <td>@item.naziv</td>
            <td>@item.tip</td>
            <td>@item.godinaProizvodnje</td>
            <td>@item.cena</td>
            
        </tr>
    }
</table>

