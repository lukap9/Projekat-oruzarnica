@model Projekat.Context.Oruzjee
@{
    ViewBag.Title = "UpdateOruzje";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .error {
        color: red;
    }
</style>
@using (Html.BeginForm("DodajOruzje", "Oruzje", FormMethod.Post))
{
    <div class="container" style="padding: 20px;">
        <div class="form-group">
            <label>ID oruzja</label>
            @Html.ValidationMessageFor(x => x.IDOruzja, "")
            @Html.TextBoxFor(x => x.IDOruzja, new { @class = "form-control"})

        </div>
        <div class="form-group">
            <label>godina proizvodnje</label>
            @Html.ValidationMessageFor(x => x.godinaProizvodnje, "")
            @Html.TextBoxFor(x => x.godinaProizvodnje, new { Value = ViewBag.godinaProizvodnje, @class = "form-control" })

        </div>

        <div class="form-group">
            <label>tip</label>
            @Html.ValidationMessageFor(x => x.tip, "")
            @Html.TextBoxFor(x => x.tip, new { Value = ViewBag.tip, @class = "form-control" })
        </div>
        <div class="form-group">
            <label>naziv</label>
            @Html.ValidationMessageFor(x => x.naziv, "")
            @Html.TextBoxFor(x => x.naziv, new { Value = ViewBag.naziv, @class = "form-control" })
        </div>
        <div class="form-group">
            <label>cena</label>
            @Html.ValidationMessageFor(x => x.cena, "")
            @Html.TextBoxFor(x => x.cena, new { Value = ViewBag.cena, @class = "form-control" })
        </div>
        <div class="form-group">

            <button type="submit" style="color: white" class="btn btn-success">Izmeni</button>
        </div>
    </div>
}

