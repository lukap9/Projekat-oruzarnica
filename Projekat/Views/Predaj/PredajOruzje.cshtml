@model Projekat.Context.SkladisteOruzja
@{
    ViewBag.Title = "PredajOruzje";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<style>
    .error {
        color: red;
    }
</style>
@using (Html.BeginForm("UbaciPredajOruzje", "Predaj", FormMethod.Post))
{
    <div class="container">
        
        <div class="form-group">

            <label>ID Oruzja</label>
            @Html.ValidationMessageFor(x => x.IDOruzja, "")
            @Html.TextBoxFor(x => x.IDOruzja, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>naziv</label>
            @Html.ValidationMessageFor(x => x.naziv, "")
            @Html.TextBoxFor(x => x.naziv, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>tip</label>
            @Html.ValidationMessageFor(x => x.tip, "")
            @Html.TextBoxFor(x => x.tip, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>godina proizvodnje</label>
            @Html.ValidationMessageFor(x => x.godinaProizvodnje, "")
            @Html.TextBoxFor(x => x.godinaProizvodnje, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Ime</label>
            @Html.ValidationMessageFor(x => x.Ime, "")
            @Html.TextBoxFor(x => x.Ime, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Prezime</label>
            @Html.ValidationMessageFor(x => x.Prezime, "")
            @Html.TextBoxFor(x => x.Prezime, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>JMBG</label>
            @Html.ValidationMessageFor(x => x.JMBG, "")
            @Html.TextBoxFor(x => x.JMBG, new { @class = "form-control" })
        </div>
        <div class="form-group">

            <button type="submit" style="color: white" class="btn btn-success">Unesi</button>
        </div>
    </div>
}

