@model List<Projekat.Context.SkladisteMunicije>
@{
    ViewBag.Title = "ListaSkladistaMunicije";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    table {
        margin: 20px;
    }

    th {
        margin: 2px;
        background-color: lightgreen;
        width: 200px;
        height: 30px;
        border: 1px solid black;
        text-align: center;
    }

    td {
        margin: 2px;
        background-color: lightgray;
        width: 200px;
        height: 30px;
        text-align: center;
        border: 1px solid black;
    }
</style>
<table>
    <tr>
        <th>broj priznanice</th>
        <th>vreme priznanice</th>
        <th>ID municije</th>
        <th>godina proizvodnje</th>
        <th>kalibar</th>
        <th>broj metaka</th>
        <th>Ime</th>
        <th>Prezime</th>
        <th>JMBG</th>
        <th>status</th>
        <th>akcija</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BrojPriznanice</td>
            <td>@item.VremePriznanice</td>
            <td>@item.IDMunicije</td>
            <td>@item.godinaProizvodnje</td>
            <td>@item.kalibar</td>
            <td>@item.brojMetaka</td>
            <td>@item.Ime</td>
            <td>@item.Prezime</td>
            <td>@item.JMBG</td>
            <td>@item.statusSkladistenja</td>


            <td>
                <a href="@Url.Action("UpdateSkladisteMunicije",new { item.BrojPriznanice })" style="margin: 5px;" class=" btn btn-info">Update</a>
                <a href="@Url.Action("Delete",new { item.BrojPriznanice })" style="margin: 5px;" class=" btn btn-danger">Delete</a>
            </td>
        </tr>

    }

</table>

