@model Projekat.Context.SkladisteMunicije
@{
    ViewBag.Title = "UpdateSkladisteMunicije";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Izmeni skladište municije</h2>

<style>
    .error {
        color: red;
    }
</style>
@using (Html.BeginForm("DodajSkladisteMunicije", "SkladisteMunicije", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">

            <label>Broj priznanice</label>
            @Html.ValidationMessageFor(x => x.BrojPriznanice, "")
            @Html.TextBoxFor(x => x.BrojPriznanice, new { @class = "form-control" ,Value=ViewBag.BrojPriznanice})
        </div>
        <div class="form-group">

            <label>ID municije</label>
            @Html.ValidationMessageFor(x => x.IDMunicije, "")
            @Html.TextBoxFor(x => x.IDMunicije, new { @class = "form-control", Value = ViewBag.IDMunicije })
        </div>
        <div class="form-group">
            <label>godina proizvodnje</label>
            @Html.ValidationMessageFor(x => x.godinaProizvodnje, "")
            @Html.TextBoxFor(x => x.godinaProizvodnje, new { @class = "form-control", Value = ViewBag.godinaProizvodnje})
        </div>
        <div class="form-group">
            <label>kalibar</label>
            @Html.ValidationMessageFor(x => x.kalibar, "")
            @Html.TextBoxFor(x => x.kalibar, new { @class = "form-control", Value = ViewBag.kalibar})
        </div>
        <div class="form-group">
            <label>broj metaka</label>
            @Html.ValidationMessageFor(x => x.brojMetaka, "")
            @Html.TextBoxFor(x => x.brojMetaka, new { @class = "form-control", Value = ViewBag.brojMetaka})
        </div>
        <div class="form-group">
            <label>Ime</label>
            @Html.ValidationMessageFor(x => x.Ime, "")
            @Html.TextBoxFor(x => x.Ime, new { @class = "form-control", Value = ViewBag.Ime })
        </div>
        <div class="form-group">
            <label>Prezime</label>
            @Html.ValidationMessageFor(x => x.Prezime, "")
            @Html.TextBoxFor(x => x.Prezime, new { @class = "form-control", Value = ViewBag.Prezime})
        </div>
        <div class="form-group">
            <label>JMBG</label>
            @Html.ValidationMessageFor(x => x.JMBG, "")
            @Html.TextBoxFor(x => x.JMBG, new { @class = "form-control", Value = ViewBag.JMBG})
        </div>
        <div class="form-group">
            <label>status</label>
            @Html.ValidationMessageFor(x => x.statusSkladistenja, "")
            @Html.TextBoxFor(x => x.statusSkladistenja, new { @class = "form-control", Value = ViewBag.statusSkladistenja})
        </div>
        <div class="form-group">

            <button type="submit" style="color: white" class="btn btn-success">Izmeni</button>
        </div>
    </div>
}